# Include documentation and configuration files
include README.md
include LICENSE
include CHANGELOG.md
include ROADMAP.md
include INSTALLATION.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
include pyproject.toml
include Cargo.toml
include Cargo.lock

# Include installation scripts
include install.sh
include install.ps1

# Include source code
recursive-include crates *.rs
recursive-include crates *.toml
recursive-include python *.py

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.html
recursive-include docs *.png
recursive-include docs *.jpg
recursive-include docs *.svg

# Include examples and tests
recursive-include examples *.py
recursive-include tests *.py
recursive-include benchmarks *.py *.md

# Exclude development and build artifacts
exclude .gitignore
exclude .github
recursive-exclude * __pycache__
recursive-exclude * *.pyc
recursive-exclude * *.pyo
recursive-exclude * *.pyd
recursive-exclude * .DS_Store
recursive-exclude target *
recursive-exclude .git *